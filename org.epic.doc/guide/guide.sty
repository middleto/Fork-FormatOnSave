% Keep images at a reasonable size for printing
\def\imgwidth{%
  \ifdim\Gin@nat@width>\imgmaxwidth
    0.52\imgmaxwidth
  \else
    0.52\Gin@nat@width
  \fi
}

\def\imgheight{%
  \ifdim\Gin@nat@height>\imgmaxheight
    0.52\imgmaxheight
  \else
    0.52\Gin@nat@height
  \fi
}

